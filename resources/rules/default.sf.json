{
    "log": {
        "level": "info",
        "timestamp": true
    },
    "dns": {
        "servers": [
            {
                "tag": "proxyDns",
                "address": "8.8.8.8",
                "detour": "Tự động chọn"
            },
            {
                "tag": "localDns",
                "address": "local",
                "strategy": "ipv4_only",
                "detour": "direct"
            },
            {
                "tag": "block",
                "address": "rcode://success"
            }
        ],
        "rules": [
            {
                "outbound": "any",
                "server": "localDns",
                "disable_cache": true
            },
            {
                "query_type": [
                    "A",
                    "AAAA"
                ],
                "server": "remote"
            }
        ],
        "independent_cache": true,
        "strategy": "ipv4_only"
    },
    "inbounds": [
        {
            "type": "tun",
            "tag": "tun-in",
            "interface_name": "tun0",
            "inet4_address": "172.19.0.1/30",
            "mtu": 1300,
            "auto_route": true,
            "strict_route": true,
            "stack": "system",
            "endpoint_independent_nat": false,
            "sniff": false
        },
        {
            "listen": "0.0.0.0",
            "listen_port": 2080,
            "sniff": false,
            "tag": "mixed-in",
            "type": "mixed"
        }
    ],
    "outbounds": [
    ],
    "route": {
        "auto_detect_interface": true,
        "override_android_vpn": true,
        "final": "Lựa chọn nút",
        "rules": [
            {
                "protocol": "dns",
                "outbound": "dns-out"
            },
            {
                "inbound": [
                    "dns-in"
                ],
                "outbound": "dns-out"
            },
            {
                "outbound": "dns-out",
                "port": [
                    53
                ]
            },
            {
                "ip_cidr": [
                    "224.0.0.0/3",
                    "ff00::/8"
                ],
                "outbound": "block",
                "source_ip_cidr": [
                    "224.0.0.0/3",
                    "ff00::/8"
                ]
            }
        ]
    },
    "experimental": {
        "cache_file": {
          "enabled": true
        }
    }
}